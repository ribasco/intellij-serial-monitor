<idea-plugin version="2">
    <id>SerialPortMonitor</id>
    <name>Serial Port Monitor</name>
    <version>0.1.1</version>
    <vendor email="cherkas.da@gmail.com" url="https://bitbucket.org/dmitry_cherkas/intellij-serial-monitor">
        Dmitry Cherkas
    </vendor>

    <description><![CDATA[
      Serial port monitor plugin for IntelliJ IDEA platform aims to provide functionality, available in Arduino IDE
      through Serial Monitor Tool. Only COM port (both hardware and virtual) is currently supported. In order to use
      virtual COM port please make sure to install all necessary drivers.
    ]]></description>

    <change-notes><![CDATA[
      <p>0.1.1
          <ul>
              <li>fixed "EditorImpl hasn't been released" exception on idea shutdown</li>
              <li>switched to purejavacomm SerialService implementation</li>
          </ul>
      </p>
      <p>0.1
          <ul>
              <li>Initial version</li>
          </ul>
      </p>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Serial Monitor" anchor="bottom" icon="SerialMonitorIcons.OpenSerial_13x13"
                    factoryClass="com.intellij.plugins.serialmonitor.SerialMonitorToolWindowFactory"
                    canCloseContents="false" secondary="false"/>

        <applicationService serviceInterface="com.intellij.plugins.serialmonitor.service.SerialService"
                            serviceImplementation="com.intellij.plugins.serialmonitor.service.RxTxSerialService"/>
        <projectService serviceInterface="com.intellij.plugins.serialmonitor.service.SerialMonitorSettings"
                            serviceImplementation="com.intellij.plugins.serialmonitor.service.SerialMonitorSettingsImpl"/>

        <projectConfigurable key="display-name" bundle="SerialMonitorBundle" groupId="tools" id="settings.serialmonitor" instance="com.intellij.plugins.serialmonitor.SerialMonitorConfigurable"/>
    </extensions>

    <project-components>
        <component>
            <interface-class>com.intellij.plugins.serialmonitor.ui.SerialMonitorView</interface-class>
            <implementation-class>com.intellij.plugins.serialmonitor.ui.SerialMonitorView</implementation-class>
        </component>
    </project-components>
</idea-plugin>